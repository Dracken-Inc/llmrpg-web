{
  "name": "llmrpg-server",
  "version": "1.0.0",
  "description": "LLMRPG Web Server - D&D 5E Campaign Assistant",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "managers/**/*.js",
      "middleware/**/*.js",
      "index.js"
    ]
  },
  "keywords": ["rpg", "dnd", "campaign", "websocket"],
  "author": "",
  "license": "MIT"
}
